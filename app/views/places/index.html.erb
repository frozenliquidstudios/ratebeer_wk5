<h1>Beer places search</h1>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @places %>
  <table class="table table-hover">
    <thead>
      <td>Name</td>
      <td>Status</td>
    </thead>
    <% @places.each do |place| %>
      <tr>
        <td><%= link_to place.name, place_url(place.city, place.id) %></td>
        <td><%= place.name %></td>
        <td><%= place.status %></td>
      </tr>
    <% end %>
  </table>
<% end %>